<%- include('../partials/header.ejs') -%>




<section class="hero is-danger">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Send Message to Owner of This Storage
      </h1>
    </div>
  </div>
</section>

<div class="column is-2"></div>
<div class="column is-8">

<form action="/forms" method="POST">    
<div class="columns">
  <div class="column is-one-third"></div>
  <div class="column">

    <div class="field">
      <label class="label">Storage Header : <%= storage.storageHeader %></label>
           <div class="control">
          <textarea class="textarea" type="text" placeholder="Write your message here" name="contactMessage"></textarea>
        </div>
    </div>
    <input type="hidden" name="senderID" value="<%=user.id%>">
    <input type="hidden" name="ownerID" value="<%=storage.userID%>">

  <div class="field">
    <div class="control">
      <button class="button is-danger">Send Message</button>
    </div>
  </div>
</form>

</div>

</div>

  <div class="column is-2"></div>
</div>



<%- include('../partials/footer.ejs') -%>


