<%- include('../partials/header'); -%>

<% if(user){ %>


<section class="hero is-dark">
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          Inbox
        </h1>
        <h2 class="subtitle">
          
        </h2>
      </div>
    </div>
  </section>


  <div class="table-container">
    <table class="table is-fullwidth">
        <table class="table is-fullwidth">
            <thead>
              <tr>
                <th>Message</th>
             </tr>
            </thead>
            <tbody>
            <% contact.forEach(function(msg) {  %>
              <tr>
              <td colspan="2"><% if( msg.messageType=='new'){ %><b><%= msg.contactMessage %></b><% } else { %><%= msg.contactMessage %> <% } %></td>
               
              </tr>
              <tr><td></td>
                 <td>

                  
                 </td></tr>

              <tr><td colspan="2">

                <form id="answer-form" method="POST" action="/forms/<%= msg._id %>/answers">
                   <div class="field">
                      <div class="control">
                        <textarea class="textarea is-small" type="text" placeholder="Write your answer here" name="content" rows="1"></textarea>
                      </div>
                    </div>
                    <input class="button is-warning is-small" type="submit" value="Send Answer">
                  </form>

              </td></tr>
              <% }) %>

              
            </tbody>
          </table>
    </table>
  </div>
<% } %>
  
<%- include('../partials/footer'); -%>

